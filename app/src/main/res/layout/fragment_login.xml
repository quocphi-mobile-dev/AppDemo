<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_7"
    tools:context=".authen_screen.fragment.LoginFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"
            android:orientation="vertical"
            android:padding="@dimen/pading_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="SIGN IN"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_18" />

            <EditText

                android:id="@+id/edt_SignInUsername"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/custom_edittext_border"
                android:hint="Username"
                android:paddingStart="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_10"
                android:textSize="@dimen/textsize_15" />

            <EditText
                android:id="@+id/edt_SignInpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/custom_edittext_border"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_10"
                android:textSize="@dimen/textsize_15" />

            <ViewFlipper
                android:id="@+id/view_flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_signIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/colorBlue"
                    android:text="Sign in"
                    android:textColor="@color/colorWhite" />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:indeterminateDrawable="@drawable/custom_progress_bar" />

            </ViewFlipper>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
