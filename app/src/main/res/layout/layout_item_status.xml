<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_5"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_profile"
            android:layout_width="76dp"
            android:layout_height="63dp"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/anh1"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="3dp" />


        <TextView
            android:id="@+id/tv_fullName"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toEndOf="@id/imv_profile"
            android:layout_toRightOf="@id/imv_profile"
            android:text="USERNAME"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_createDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fullName"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@id/imv_profile"
            android:text="Date Time"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_15" />

        <TextView

            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_profile"
            android:paddingStart="10dp"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="DÒNG TRẠNG THÁI"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_15"
            android:paddingLeft="10dp" />

        <RelativeLayout

            android:id="@+id/rl_relative_layout"
            android:layout_marginTop="@dimen/margin_10"
            android:padding="10dp"
            android:layout_below="@id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_like"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_number_like"
                android:layout_toEndOf="@id/iv_like_number"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/colorGray900"
                android:layout_toRightOf="@id/iv_like_number"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_number_comment"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13"
                android:text="20 Bình luận"
                android:textColor="@color/colorGray900"
                android:layout_marginRight="@dimen/margin_10" />


        </RelativeLayout>
        <View
            android:layout_below="@id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@color/colorGrey200">

        </View>


        <LinearLayout
            android:layout_below="@id/rl_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="@dimen/margin_10">
            <LinearLayout
                android:id="@+id/item_like"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            
            <ImageView

                android:id="@+id/imv_like"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dont_like"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_like"

                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thich"
                android:layout_marginRight="@dimen/margin_10">
            </TextView>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/item_comemnt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/imv_comment"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_comment_black"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_comment"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binh Luan"
                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/imv_share"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_share_black"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_share"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chia Se"
                android:layout_marginStart="@dimen/margin_10"
                >

            </TextView>
        </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>