<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_ava"
            android:layout_width="76dp"
            android:layout_height="63dp"
            android:layout_marginStart="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:src="@drawable/anh1"
            app:civ_border_color="@color/grey"
            app:civ_border_width="0.5dp"
            android:layout_marginLeft="@dimen/margin10" />

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_ava"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_ava">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginTop="@dimen/margin15"
                android:text="@string/enter_username"
                android:textColor="@color/black"
                android:textSize="@dimen/font17"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin10" />

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:text="@string/datetime"
                android:textSize="@dimen/font15"
                android:layout_marginLeft="@dimen/margin10" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="@dimen/margin20"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin10"
            android:layout_toRightOf="@+id/line"
            android:gravity="right"
            android:paddingRight="@dimen/margin15"
            android:text="&#8942;"
            android:textSize="@dimen/font20"
            android:visibility="visible"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ava"
            android:layout_marginStart="@dimen/margin15"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginEnd="@dimen/margin15"
            android:text="@string/status_content"
            android:textColor="@color/black"
            android:textSize="@dimen/font15"
            android:layout_marginBottom="@dimen/margin15"/>

        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/margin10">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/iv_two_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_two_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin2"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_three_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin2"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_three_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/iv_three_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_four_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anh1" />


                    <ImageView
                        android:id="@+id/iv_four_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anh1" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_four_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anh1" />


                    <ImageView
                        android:id="@+id/iv_four_4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_five_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_five_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_five_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop" />

                    <!--<View-->
                    <!--android:layout_width="3dp"-->
                    <!--android:layout_height="wrap_content" />-->

                    <ImageView
                        android:id="@+id/iv_five_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/margin2"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layout_iv5"
                        >

                        <ImageView
                            android:id="@+id/iv_five_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/margin2"
                            android:scaleType="centerCrop" />

                        <View
                            android:id="@+id/view_grey"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black30"
                            android:visibility="invisible"
                            android:layout_margin="2dp"/>

                        <TextView
                            android:id="@+id/tv_numberImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="+0"
                            android:textColor="@color/white"
                            android:textSize="35sp"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </ViewFlipper>

        <LinearLayout
            android:id="@+id/LinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_flipper">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_countlove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin10"
                    android:src="@drawable/ic_like"
                    android:layout_marginLeft="@dimen/margin10" />

                <TextView
                    android:id="@+id/tv_numberLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numberLike" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cmt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin15"
                android:layoutDirection="rtl"
                android:layout_marginLeft="@dimen/margin15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="@string/comment"
                    android:layout_marginLeft="@dimen/margin5" />

                <TextView
                    android:id="@+id/tv_countComment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="@string/_0"
                    android:layout_marginLeft="@dimen/margin5" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/LinerLayout"
            android:layout_margin="@dimen/margin5"
            android:background="@color/greylite2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinerLayout"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal"
            android:padding="@dimen/margin5">

            <LinearLayout
                android:id="@+id/itemLike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/custom_like_click">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_dont_like"
                    android:padding="@dimen/margin5" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin5"
                    android:text="@string/like"
                    android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/itemComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/custom_like_click">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin5"
                    android:src="@drawable/ic_comment_black" />

                <TextView
                    android:id="@+id/tv_cmt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin5"
                    android:text="@string/comment"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/custom_like_click">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin5"
                    android:src="@drawable/ic_share_black" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin5"
                    android:text="@string/share"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>