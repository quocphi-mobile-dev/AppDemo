<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ava_friend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/anh1"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_mess_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxWidth="200dp"
                android:padding="8dp"
                android:background="@drawable/custom_message_friend"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ava_me"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/anh1" />

            <TextView
                android:id="@+id/tv_mess_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_message_me"
                android:maxWidth="200dp"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

        </LinearLayout>
    </ViewFlipper>

</LinearLayout>