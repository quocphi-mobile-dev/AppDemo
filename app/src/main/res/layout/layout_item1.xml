<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_5"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="76dp"
            android:layout_height="63dp"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/anh1"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="3dp" />


        <TextView
            android:id="@+id/tv_username"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/iv_profile"
            android:text="USERNAME"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@id/iv_profile"
            android:text="Date Time"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_15" />
        <TextView

            android:id="@+id/tv_yourmind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_profile"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="DÒNG TRẠNG THÁI"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_15" />

        <LinearLayout

            android:id="@+id/LinerLayout"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@id/tv_yourmind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_countlove"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_yourmind"
                android:background="@drawable/ic_mood_black"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_countLike"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                 />
            <TextView
                android:id="@+id/tv_cont_cmt"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_marginRight="@dimen/margin_10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bình luận"
                 />

        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/LinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">
            <ImageView

                android:id="@+id/iv_love"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_yourmind"
                android:background="@drawable/ic_mood_black"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_love"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thich"
                android:layout_marginRight="@dimen/margin_10">

            </TextView>

            <ImageView

                android:id="@+id/iv_comment"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_yourmind"
                android:background="@drawable/ic_comment_black"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_comment"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Binh Luan"
                android:layout_marginRight="@dimen/margin_10">

            </TextView>

            <ImageView

                android:id="@+id/iv_share"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_yourmind"
                android:background="@drawable/ic_share_black"
                android:padding="@dimen/padding_5"
                android:layout_marginLeft="@dimen/margin_10" />
            <TextView
                android:id="@+id/tv_share"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Chia Se"
                android:layout_marginRight="@dimen/margin_10">

            </TextView>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>